RewriteEngine On

# =========================================================
# 0) 先把 /assets/* 映射到 Public/assets/*
#    因為你的檔案實際在 Public/assets/ 內
# =========================================================
RewriteRule ^assets/(.*)$ Public/assets/$1 [L,NC]

# =========================================================
# 1) （可選）把 /uploads/* 映射到 storage/uploads/*
#    未來車輛圖片若要用 <img src="/jinghong_admin/uploads/...">
# =========================================================
RewriteRule ^uploads/(.*)$ storage/uploads/$1 [L,NC]

# =========================================================
# 2) 已存在的實體檔案/資料夾 → 直接放行
# =========================================================
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# =========================================================
# 3) 其餘全部交給 Public/index.php（漂亮轉址 router）
# =========================================================
RewriteRule ^ Public/index.php [L]
