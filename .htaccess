# Path: /public_html/jinghong_admin/.htaccess
# 說明: jinghong_admin 外層路由入口（漂亮網址 + 靜態資源映射）
# - /jinghong_admin/assets/*  → /jinghong_admin/Public/assets/*
# - /jinghong_admin/uploads/* → /jinghong_admin/storage/uploads/*
# - 其他全部 → /jinghong_admin/Public/index.php（router）

Options -MultiViews
RewriteEngine On
RewriteBase /jinghong_admin/

# 1) 靜態資源：把 /assets/* 映射到 Public/assets/*
RewriteRule ^assets/(.*)$ /jinghong_admin/Public/assets/$1 [L,NC]

# 2)（可選）車輛圖片：把 /uploads/* 映射到 storage/uploads/*
RewriteRule ^uploads/(.*)$ /jinghong_admin/storage/uploads/$1 [L,NC]

# 3) 實體檔案/資料夾直接放行
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 4) 其餘全部交給 router
RewriteRule ^ /jinghong_admin/Public/index.php [L]
