#######################################
# Application
#######################################
APP_NAME="境宏公司管理系統"
APP_ENV=local          # local / staging / production
APP_DEBUG=true
APP_URL=http://localhost/jinghong_admin

#######################################
# Database
#######################################
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=jinghong_admin
DB_USER=root
DB_PASS=

#######################################
# Session / Auth
#######################################
SESSION_NAME=jinghong_admin_session
SESSION_LIFETIME=7200

#######################################
# Upload (Vehicle Images Only )
#######################################
UPLOAD_MAX_SIZE=5242880          # 5MB
UPLOAD_IMAGE_TYPES=jpg,jpeg,png,webp
UPLOAD_VEHICLE_PATH=storage/uploads/vehicles

#######################################
# Public Pole Map (Leaflet)
#######################################
POLE_DATA_IMPORT_PATH=storage/import/pole
POLE_MAP_DEFAULT_LAT=24.5700
POLE_MAP_DEFAULT_LNG=120.8200
POLE_MAP_DEFAULT_ZOOM=12

#######################################
# Google Navigation (Link Only)
#######################################
GOOGLE_MAPS_NAV_URL=https://www.google.com/maps/dir/?api=1

#######################################
# Version
#######################################
APP_VERSION=0.1.0
